{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
      {
          "type": "Container",
          "items": [
              {
                  "type": "TextBlock",
                  "size": "medium",
                  "weight": "bolder",
                  "text": "Ich hab dazu leider nichts gefunden."
              }
          ]
      },
      {
          "type": "Container",
          "items": [
              {
                  "type": "TextBlock",
                  "text": "Du hast hier die Möglichkeit ein Support Ticket für dein Problem zu erstellen.",
                  "wrap": true
              }
          ]
      },
      {
        "type": "ColumnSet",
        "columns": [
            {
                "type": "Column",
                "width": "auto",
                "items": [
                    {
                        "type": "TextBlock",
                        "weight": "bolder",
                        "text": "Name"
                    },
                    {
                      "type": "TextBlock",
                      "weight": "bolder",
                      "text": "Filiale"
                    }
                ]
            },
            {
                "type": "Column",
                "width": "stretch",
                "spacing": "large",
                "items": [
                    {
                        "type": "Input.Text",
                        "id": "name",
                        "title": "New Input.Toggle"
                    },
                    {
                      "type": "Input.Text",
                      "id": "office",
                      "title": "New Input.Toggle"
                    }
                ]
            }
        ]
      },
      {
          "type": "Input.Text",
          "id": "message",
          "title": "New Input.Toggle",
          "placeholder": "Bitte beschreibe dein Problem...",
          "isMultiline": true
      }
  ],
  "actions": [
      {
          "type": "Action.Submit",
          "title": "Abschicken",
          "data": {
            "type": "ticket-submit"
          }
      }
  ]
}